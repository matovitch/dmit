#######################
#                     #
# BUILD CONFIGURATION #
#                     #
#######################

# Use debug information
CONFIG_IS_DEBUG=y

# Enable the usage of assertions
CONFIG_IS_USING_ASSERT=y

# Register coroutine stack for valgrind
CONFIG_IS_USING_VALGRIND=n

# Enable the usage of safe optional references (vs pointers)
CONFIG_IS_USING_OPTION_REFERENCE=y

# Optimization level (0 to 3)
CONFIG_O_LEVEL=0

# Use clang address sanitizer
CONFIG_IS_ASAN=y

# Create static executables
CONFIG_IS_STATIC=n

# Control executables build for faster compilation (if you only need the tests)
CONFIG_IS_BUILDING_BINARIES=y
